{
  "platform": "next",
  "build": {
    "commands": [
      "npm ci",
      "npm run build:force"
    ],
    "env": {
      "SKIP_ENV_VALIDATION": "true",
      "TSC_COMPILE_ON_ERROR": "true", 
      "DISABLE_ESLINT": "true",
      "SKIP_TYPE_CHECK": "true",
      "NEXT_SKIP_VALIDATION": "true",
      "ESLint_NO_DEV_ERRORS": "true",
      "ESLINT_NO_DEV_ERRORS": "true"
    }
  },
  "runtime": {
    "nodeVersion": "18"
  }
}
